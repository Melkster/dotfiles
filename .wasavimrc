" wasavi specific
set noerrorbells
set nolaunchbell
set bellvolume=0
set novisualbell
set relativenumber
set number
" set jkdenotative " Swaps j with gj, etc.
set autoindent
set nocursorblink

" From .vimrc
set ignorecase
set smartcase
set incsearch 

map Y y$
map <space>y "+y
map <space>y "+y
map <space>Y "+Y
map <space>p "+p
map <space>P "+P
map <Tab> ==
map <C-s> :w<enter>
map <C-q> :q<enter>
map <C-j> o<Esc>
map <C-k> O<Esc>

map [noremap] s ys
map [noremap] S ys$
map [noremap] ds ds
map [noremap] cs cs

map     <BS>            X
map     <S-BS>          x
map     <A-BS>          db
map!    <A-BS>          <C-w>
map     <A-S-BS>        dw
map!    <A-S-BS>        <C-o>dw
map     <A-d>           dw
map!    <C-j>           <CR>
map     <A-a>           v<C-a>
map     <A-x>           v<C-x>
map     <A-j>           }
map     <A-k>           {
map     <C-Space>       zz
map     ö               ciw
map     Ö               ciW
map     ä               viw
map     Ä               viW
map     å               ci(
map     Å               ci"
map     zt              zzLzz''
map     zb              zzHzz''
